{
  "name": "cryptoalert-pro-backend",
  "version": "1.0.0",
  "description": "CryptoAlert Pro backend infrastructure",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "node scripts/ci/lint.mjs",
    "test": "NODE_OPTIONS=--no-warnings node --loader ts-node/esm --test",
    "typecheck": "tsc --noEmit",
    "test:unit": "NODE_OPTIONS=--no-warnings node --loader ts-node/esm --test tests/unit/**/*.test.js",
    "test:integration": "NODE_OPTIONS=--no-warnings node --loader ts-node/esm --test tests/integration.test.js",
    "test:contract": "NODE_OPTIONS=--no-warnings node --loader ts-node/esm --test tests/contract/**/*.test.js",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:contract",
    "test:unit:tap": "NODE_OPTIONS=--no-warnings node --loader ts-node/esm --test --test-reporter=tap tests/unit/**/*.test.js",
    "test:integration:tap": "NODE_OPTIONS=--no-warnings node --loader ts-node/esm --test --test-reporter=tap tests/integration.test.js",
    "test:contract:tap": "NODE_OPTIONS=--no-warnings node --loader ts-node/esm --test --test-reporter=tap tests/contract/**/*.test.js",
    "reports:unit": "mkdir -p reports && NODE_OPTIONS=--no-warnings node --loader ts-node/esm --test --test-reporter=junit --test-reporter-destination=reports/unit.junit.xml tests/unit/**/*.test.js",
    "reports:integration": "mkdir -p reports && NODE_OPTIONS=--no-warnings node --loader ts-node/esm --test --test-reporter=junit --test-reporter-destination=reports/integration.junit.xml tests/integration.test.js",
    "reports:contract": "mkdir -p reports && NODE_OPTIONS=--no-warnings node --loader ts-node/esm --test --test-reporter=junit --test-reporter-destination=reports/contract.junit.xml tests/contract/**/*.test.js",
    "coverage:ci": "mkdir -p reports/coverage/v8 && NODE_OPTIONS=--no-warnings NODE_V8_COVERAGE=reports/coverage/v8 node --loader ts-node/esm --test --experimental-test-coverage tests/unit/**/*.test.js tests/integration.test.js tests/contract/**/*.test.js > reports/coverage/summary.txt",
    "security:scan": "npm audit --audit-level=high"
    "lint": "eslint . --ext .ts",
    "test": "NODE_OPTIONS=--no-warnings node --loader ts-node/esm --test --test-reporter=spec",
    "test:coverage": "NODE_OPTIONS=--no-warnings node --loader ts-node/esm --test --experimental-test-coverage --test-coverage-include=\"src/controllers/**/*.ts\" --test-coverage-include=\"src/routes/v1/**/*.ts\" --test-coverage-include=\"src/services/newsService.ts\" --test-coverage-include=\"src/services/portfolioSync.ts\" --test-coverage-include=\"src/services/inviteService.ts\" --test-coverage-include=\"src/services/stripeService.ts\" --test-coverage-include=\"src/services/notifications.ts\" --test-coverage-lines=80"
    "test": "NODE_OPTIONS=--no-warnings node --loader ts-node/esm --test",
    "test:security": "NODE_OPTIONS=--no-warnings node --loader ts-node/esm --test tests/integration.test.js",
    "security:verify-input": "node scripts/security/verify-controller-validation.mjs",
    "security:gate": "node scripts/security/enforce-security-gate.mjs npm-audit.json"
    "journeys:staging": "node tests/journeys/synthetic-journeys.mjs",
    "journeys:gate": "node tests/journeys/assert-kpis.mjs",
    "test:e2e": "npm run test && npm run journeys:gate"
    "test:compatibility": "node tests/compatibility/compatibility-smoke.mjs",
    "perf:k6": "k6 run tests/performance/k6-critical-routes.js",
    "perf:k6:load": "TEST_PROFILE=load k6 run tests/performance/k6-critical-routes.js",
    "perf:k6:stress": "TEST_PROFILE=stress k6 run tests/performance/k6-critical-routes.js",
    "perf:k6:soak": "TEST_PROFILE=soak k6 run tests/performance/k6-critical-routes.js"
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "bullmq": "^5.0.0",
    "ccxt": "^4.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.0",
    "express-rate-limit": "^7.0.0",
    "firebase-admin": "^12.0.0",
    "ioredis": "^5.3.0",
    "jsonwebtoken": "^9.0.0",
    "node-fetch": "^3.3.2",
    "stripe": "^14.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.5",
    "@types/node-fetch": "^3.0.3",
    "@types/stripe": "^8.0.416",
    "@types/supertest": "^2.0.16",
    "eslint": "^8.56.0",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "type": "module"
}
