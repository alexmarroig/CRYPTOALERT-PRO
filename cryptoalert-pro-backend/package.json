{
  "name": "cryptoalert-pro-backend",
  "version": "1.0.0",
  "description": "CryptoAlert Pro backend infrastructure",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "node scripts/ci/lint.mjs",
    "test": "NODE_OPTIONS=--no-warnings node --loader ts-node/esm --test tests/unit/controllers.test.js tests/contract/**/*.test.js",
    "test:unit": "NODE_OPTIONS=--no-warnings node --loader ts-node/esm --test tests/unit/**/*.test.js",
    "test:integration": "NODE_OPTIONS=--no-warnings node --loader ts-node/esm --test tests/integration.test.js",
    "test:contract": "NODE_OPTIONS=--no-warnings node --loader ts-node/esm --test tests/contract/**/*.test.js",
    "test:coverage": "NODE_OPTIONS=--no-warnings node --loader ts-node/esm --test --experimental-test-coverage",
    "journeys:staging": "node tests/journeys/synthetic-journeys.mjs",
    "journeys:gate": "node tests/journeys/assert-kpis.mjs",
    "test:compatibility": "node tests/compatibility/compatibility-smoke.mjs"
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "bullmq": "^5.0.0",
    "ccxt": "^4.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.0",
    "express-rate-limit": "^7.0.0",
    "firebase-admin": "^12.0.0",
    "ioredis": "^5.3.0",
    "jsonwebtoken": "^9.0.0",
    "node-fetch": "^3.3.2",
    "stripe": "^14.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.11.5",
    "@types/node-fetch": "^3.0.3",
    "@types/stripe": "^8.0.416",
    "@types/supertest": "^2.0.16",
    "eslint": "^8.56.0",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
